<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_home_top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/identify"
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="45dp"
                            android:text="Identify"
                            android:textAllCaps="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/spesies"
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/leaf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="45dp"
                            android:text="Species"
                            android:textAllCaps="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/article"
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/book" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="45dp"
                            android:text="Articles"
                            android:textAllCaps="true" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arimo_bold"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:text="Plant Types"/>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/sayur"
                        android:layout_gravity="center"
                        android:layout_width="360dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="10dp"
                        android:layout_marginBottom="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/veggies"
                            android:scaleType="fitXY"/>

                        <View
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/gradient" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sayur_sayuran"
                            android:textSize="18sp"
                            android:layout_gravity="bottom"
                            android:padding="4dp"
                            android:paddingBottom="12dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.3"
                            android:textColor="@android:color/white"/>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sayur2"
                        android:layout_gravity="center"
                        android:layout_width="360dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/buah"
                            android:scaleType="fitXY"/>

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/gradient" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/berbuah"
                            android:textSize="18sp"
                            android:layout_gravity="bottom"
                            android:padding="4dp"
                            android:paddingBottom="12dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.3"
                            android:textColor="@android:color/white"/>


                    </androidx.cardview.widget.CardView>



                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arimo_bold"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:text="Articles"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/article_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>