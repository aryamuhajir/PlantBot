<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AddPhotosFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Foto"
            android:layout_marginTop="20dp"
            android:textSize="40sp"
            android:fontFamily="@font/amarante"
            android:textColor="#9ABC9A"
            android:gravity="center"/>

        <Button
            android:id="@+id/button_add_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_login_signup"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="CHOOSE FILE"/>

        <EditText
            android:id="@+id/edit_name_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/button_add_file"
            android:background="@drawable/custom_edit_text"
            android:padding="10dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter File Name"/>

        <ImageView
            android:id="@+id/image_upload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/edit_name_file"
            android:layout_above="@id/progress_bar_upload"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/button_upload_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_login_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="500dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="UPLOAD"/>

        <Button
            android:id="@+id/button_show_upload_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_login_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="600dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="Show Upload"/>

        <ProgressBar
            android:id="@+id/progress_bar_upload"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="229dp" />

    </RelativeLayout>

</FrameLayout>