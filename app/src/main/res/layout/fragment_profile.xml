<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileTabFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_profile_top"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/feed"
                            android:layout_width="110dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:background="@color/white"
                            android:elevation="4dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/feed" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="45dp"
                                android:text="Feed"
                                android:textAllCaps="true" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/myplant"
                            android:layout_width="110dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:background="@color/white"
                            android:elevation="4dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/my_plant" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="45dp"
                                android:text="My Plant"
                                android:textAllCaps="true" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/schedule"
                            android:layout_width="110dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:background="@color/white"
                            android:elevation="4dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/schedule" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="45dp"
                                android:text="SCHEDULE"
                                android:textAllCaps="true" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arimo_bold"
                            android:textSize="24sp"
                            android:textColor="@color/black"
                            android:text="Upload And Share"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/show_photo"
                            android:layout_gravity="center"
                            android:layout_width="360dp"
                            android:layout_height="140dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/upload_foto"
                                android:scaleType="fitXY"/>

                            <View
                                android:id="@+id/upload_view"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/gradient" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Upload dan Bagikan Foto"
                                android:textSize="18sp"
                                android:layout_gravity="bottom"
                                android:padding="10dp"
                                android:paddingBottom="12dp"
                                android:textStyle="bold"
                                android:letterSpacing="0.3"
                                android:textColor="@android:color/white"/>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arimo_bold"
                            android:textSize="24sp"
                            android:textColor="@color/black"
                            android:text="See Kinds Of Plants"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/plant_image"
                            android:layout_gravity="center"
                            android:layout_width="360dp"
                            android:layout_height="140dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/plant"
                                android:scaleType="fitXY"/>

                            <View
                                android:id="@+id/plant_view"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/gradient" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lihat Tanaman dan Tambah Ke Jadwal"
                                android:textSize="18sp"
                                android:layout_gravity="bottom"
                                android:padding="10dp"
                                android:paddingBottom="12dp"
                                android:textStyle="bold"
                                android:letterSpacing="0.3"
                                android:textColor="@android:color/white"/>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arimo_bold"
                            android:textSize="24sp"
                            android:textColor="@color/black"
                            android:text="Add A Watering Schedule"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/schedule_image"
                            android:layout_gravity="center"
                            android:layout_width="360dp"
                            android:layout_height="140dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/add_schedule"
                                android:scaleType="fitXY"/>

                            <View
                                android:id="@+id/schedule_view"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/gradient" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tambahkan Jadwal Penyiraman Tanaman Anda"
                                android:textSize="18sp"
                                android:layout_gravity="bottom"
                                android:padding="10dp"
                                android:paddingBottom="12dp"
                                android:textStyle="bold"
                                android:letterSpacing="0.3"
                                android:textColor="@android:color/white"/>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>